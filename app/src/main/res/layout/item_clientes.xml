<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtItemEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_vertical|right|end"
        android:layout_weight=".5"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="10sp"
        android:singleLine="true"
        android:text="EDAD"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtItemNombre" />

    <TextView
        android:id="@+id/txtItemPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_vertical|start|left"
        android:layout_marginTop="4dp"
        android:layout_weight=".5"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="10sp"
        android:singleLine="true"
        android:text="TELÉFONO"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/txtItemPrev"
        app:layout_constraintTop_toBottomOf="@+id/txtItemPrev" />

    <TextView
        android:id="@+id/txtItemEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_vertical|right|end"
        android:layout_marginTop="4dp"
        android:layout_weight=".5"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="10sp"
        android:singleLine="true"
        android:text="EMAIL"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtItemEdad" />

    <TextView
        android:id="@+id/txtItemRut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_horizontal|left"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_weight="1.5"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="10sp"
        android:singleLine="true"
        android:text="RUT"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtItemPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_horizontal|center_vertical|end"
        android:layout_weight="1"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="10sp"
        android:singleLine="true"
        android:text="PREVISIÓN"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/txtItemRut"
        app:layout_constraintTop_toBottomOf="@+id/txtItemRut" />

    <TextView
        android:id="@+id/txtItemNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|left|center_vertical"
        android:layout_weight="3"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="10sp"
        android:singleLine="true"
        android:text="NOMBRE"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditClient"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:onClick="editCliente"
        app:backgroundTint="#C5CAE9"
        app:fabCustomSize="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>